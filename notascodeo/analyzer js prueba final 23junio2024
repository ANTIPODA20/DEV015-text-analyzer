const analyzer = {
  // Funciones para anÃ¡lisis de texto
  getWordCount: function(text) {
    if (typeof text !== "string") {
      return 0;
    }
    const words = text.trim().split(/\s+/).filter(word => word.length > 0);
    return words.length;
  },

  getCharacterCount: function(text) {
    return text.length;
  },

  getCharacterCountExcludingSpaces: function(text) {
    const characterWithoutSpace = text.replace(/\s/g, '');
    return characterWithoutSpace.length;
  },

  getNumberCount: function(text) {
    const words = text.trim().split(/\s+/).filter(word => word.length > 0);
    let count = 0;
    for (let i = 0; i < words.length; i++) {
      if (!isNaN(words[i])) {
        count++;
      }
    }
    return count;
  },

  getNumberSum: function(text) {
    const words = text.trim().split(/\s+/).filter(word => word.length > 0);
    let sum = 0;
    for (let i = 0; i < words.length; i++) {
      if (!isNaN(words[i])) {
        sum += parseFloat(words[i]);
      }
    }
    return sum;
  },

  getAverageWordLength: function(text) {
    const words = text.trim().split(/\s+/).filter(word => word.length > 0);
    if (words.length === 0) return 0;
    const totalLength = words.reduce((acc, word) => acc + word.length, 0);
    return Number( (totalLength / words.length).toFixed(2));
  }
};

export default analyzer;
